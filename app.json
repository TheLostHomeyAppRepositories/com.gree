{
    "id": "com.gree",
    "version": "0.1.0",
    "compatibility": ">=1.5.0",
    "sdk": 2,
    "name": {
        "en": "Gree, Cooper&Hunter HVAC"
    },
    "description": {
        "en": "Control your Gree, Cooper&Hunter HVAC devices"
    },
    "category": [
        "climate"
    ],
    "tags": {
        "en": [
            "cooper&hunter",
            "gree",
            "cooper and hunter",
            "daitsu",
            "hvac",
            "air conditioner"
        ]
    },
    "permissions": [],
    "images": {
        "large": "/assets/images/large.png",
        "small": "/assets/images/small.png"
    },
    "author": {
        "name": "Illia Antypenko",
        "email": "ilya@antipenko.pp.ua"
    },
    "capabilities": {
        "hvac_mode": {
            "type": "enum",
            "title": {
                "en": "HVAC mode",
                "nl": "HVAC modus",
                "de": "HVAC-Modus"
            },
            "desc": {
                "en": "Mode of the HVAC",
                "nl": "Modus van de HVAC",
                "de": "Modus der HVAC"
            },
            "values": [
                {
                    "id": "auto",
                    "title": {
                        "en": "Auto",
                        "nl": "Automatisch",
                        "de": "Automatisch"
                    }
                },
                {
                    "id": "cool",
                    "title": {
                        "en": "Cool",
                        "nl": "Koelen",
                        "de": "Kühlen"
                    }
                },
                {
                    "id": "heat",
                    "title": {
                        "en": "Heat",
                        "nl": "Verhitten",
                        "de": "Heizen"
                    }
                },
                {
                    "id": "dry",
                    "title": {
                        "en": "Dry",
                        "nl": "Droog",
                        "de": "Trocken"
                    }
                },
                {
                    "id": "fan_only",
                    "title": {
                        "en": "Fan Only",
                        "nl": "Alleen fans",
                        "de": "Nur Fan"
                    }
                }
            ],
            "getable": true,
            "setable": true,
            "uiComponent": "picker"
        },
        "fan_speed": {
            "type": "enum",
            "title": {
                "en": "Fan speed",
                "nl": "Ventilator snelheid",
                "de": "Lüftergeschwindigkeit"
            },
            "desc": {
                "en": "Speed of the HVAC's fan",
                "nl": "Snelheid van de HVAC-ventilator",
                "de": "Drehzahl der HVAC"
            },
            "values": [
                {
                    "id": "auto",
                    "title": {
                        "en": "Auto",
                        "nl": "Automatisch",
                        "de": "Automatisch"
                    }
                },
                {
                    "id": "low",
                    "title": {
                        "en": "Low",
                        "nl": "Laag",
                        "de": "Niedrig"
                    }
                },
                {
                    "id": "mediumLow",
                    "title": {
                        "en": "Medium Low",
                        "nl": "Gemiddeld Laag",
                        "de": "Mittel Niedrig"
                    }
                },
                {
                    "id": "medium",
                    "title": {
                        "en": "Medium",
                        "nl": "Gemiddeld",
                        "de": "Mittel"
                    }
                },
                {
                    "id": "mediumHigh",
                    "title": {
                        "en": "Medium High",
                        "nl": "Gemiddeld hoog",
                        "de": "Mittel hoch"
                    }
                },
                {
                    "id": "high",
                    "title": {
                        "en": "High",
                        "nl": "Hoog",
                        "de": "Hoch"
                    }
                }
            ],
            "getable": true,
            "setable": true,
            "uiComponent": "picker"
        }
    },
    "drivers": [
        {
            "id": "gree_cooper_hunter_hvac",
            "name": {
                "en": "Gree, Cooper&Hunter HVAC"
            },
            "class": "thermostat",
            "capabilities": [
                "onoff",
                "target_temperature",
                "hvac_mode",
                "fan_speed"
            ],
            "capabilitiesOptions": {
                "target_temperature": {
                    "min": 16,
                    "max": 30,
                    "step": 1
                }
            },
            "mobile": {
                "components": [
                    {
                        "id": "icon",
                        "capabilities": []
                    },
                    {
                        "id": "thermostat",
                        "capabilities": [
                            "target_temperature"
                        ]
                    }
                ]
            },
            "pair": [
                {
                    "id": "switch_wifi_info",
                    "navigation": {
                        "next": "list_devices"
                    }
                },
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_my_devices"
                    }
                },
                {
                    "id": "add_my_devices",
                    "template": "add_devices"
                }
            ],
            "images": {
                "large": "/drivers/gree_cooper_hunter_hvac/assets/images/large.png",
                "small": "/drivers/gree_cooper_hunter_hvac/assets/images/small.png"
            }
        }
    ]
}